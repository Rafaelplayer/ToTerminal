<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.ToTerminal.controllers.MainController">
   <top>
      <!-- Barra de menú -->
      <MenuBar fx:id="menuBar" styleClass="menu-bar">
        <menus>
          <Menu text="Terminal">
            <items>
              <MenuItem text="Limpiar pantalla" onAction="#clearScreen" />
              <SeparatorMenuItem />
              <MenuItem text="Salir" onAction="#exitApplication" />
            </items>
          </Menu>
          <Menu text="Scripts">
            <items>
              <MenuItem fx:id="scriptCreatorMenuItem" text="Crear Script..." />
              <SeparatorMenuItem />
              <MenuItem text="Administrar Scripts..." disable="true" />
            </items>
          </Menu>
          <Menu text="Configuración">
            <items>
              <MenuItem fx:id="configMenuItem" text="Preferencias..." />
            </items>
          </Menu>
          <Menu text="Ayuda">
            <items>
              <MenuItem fx:id="helpMenuItem" text="Ayuda" />
              <SeparatorMenuItem />
              <MenuItem fx:id="aboutMenuItem" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   
   <center>
      <VBox styleClass="terminal-main">
         <!-- Barra de estado -->
         <HBox styleClass="status-bar" spacing="10">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            
            <Label text="Ruta:" styleClass="status-label" />
            <Label fx:id="currentPath" styleClass="status-value" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label text="Estado:" styleClass="status-label" />
            <Label fx:id="terminalStatus" styleClass="status-value" />
            
            <Separator orientation="VERTICAL" />
            
            <Label fx:id="currentTime" styleClass="time-display" />
         </HBox>
         
         <!-- Área principal del terminal -->
         <VBox VBox.vgrow="ALWAYS" styleClass="terminal-container">
            <!-- Área de salida con scroll -->
            <ScrollPane fx:id="outputScrollPane" VBox.vgrow="ALWAYS" 
                       styleClass="output-scroll" fitToWidth="true" 
                       hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
               <VBox fx:id="terminalOutput" styleClass="terminal-output" spacing="2">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
            </ScrollPane>
            
            <!-- Línea de entrada de comandos -->
            <HBox styleClass="input-area" alignment="CENTER_LEFT" spacing="5">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <Label fx:id="promptLabel" styleClass="prompt" />
               <TextField fx:id="commandInput" HBox.hgrow="ALWAYS" 
                         styleClass="command-input" promptText="Escribe tu comando aquí..." />
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane>
