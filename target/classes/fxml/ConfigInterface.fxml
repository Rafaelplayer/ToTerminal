<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="bd" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ToTerminal.controllers.ConfigController">
   <center>
      <TabPane fx:id="configTabPane" styleClass="config-tabs" tabClosingPolicy="UNAVAILABLE">
         
         <!-- Pestaña Apariencia -->
         <Tab fx:id="appearanceTab" text="Apariencia">
            <ScrollPane fitToWidth="true" styleClass="config-scroll">
               <VBox spacing="15" styleClass="config-content">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                 
                  <Separator />
                  
                  <!-- Sección Colores -->
                  <VBox spacing="8">
                     <Label text="Colores personalizados" styleClass="section-title" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Color de fondo:" styleClass="config-label" minWidth="120" />
                        <ColorPicker fx:id="backgroundColorPicker" />
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Color de texto:" styleClass="config-label" minWidth="120" />
                        <ColorPicker fx:id="textColorPicker" />
                     </HBox>
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Sección Fuente -->
                  <VBox spacing="8">
                     <Label text="Configuración de fuente" styleClass="section-title" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Familia de fuente:" styleClass="config-label" minWidth="120" />
                        <ComboBox fx:id="fontFamilyComboBox" prefWidth="200" />
                     </HBox>
                     <VBox spacing="5">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <Label text="Tamaño de fuente:" styleClass="config-label" minWidth="120" />
                           <Label fx:id="fontSizeLabel" styleClass="value-label" />
                        </HBox>
                        <Slider fx:id="fontSizeSlider" prefWidth="300" />
                     </VBox>
                  </VBox>
               </VBox>
            </ScrollPane>
         </Tab>
         
         <!-- Pestaña Terminal -->
         <Tab fx:id="terminalTab" text="Terminal">
            <ScrollPane fitToWidth="true" styleClass="config-scroll">
               <VBox spacing="15" styleClass="config-content">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                  
                  <!-- Sección Prompt -->
                  <VBox spacing="8">
                     <Label text="Configuración del prompt" styleClass="section-title" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Prompt personalizado:" styleClass="config-label" minWidth="150" />
                        <TextField fx:id="promptTextField" prefWidth="250" />
                     </HBox>
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Sección Interfaz -->
                  <VBox spacing="8">
                     <Label text="Elementos de la interfaz" styleClass="section-title" />
                     <CheckBox fx:id="showTimeCheckBox" text="Mostrar hora en barra de estado" />
                     <CheckBox fx:id="showPathCheckBox" text="Mostrar ruta actual en barra de estado" />
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Sección Historial -->
                  <VBox spacing="8">
                     <Label text="Historial de comandos" styleClass="section-title" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Límite de historial:" styleClass="config-label" minWidth="150" />
                        <Spinner fx:id="historyLimitSpinner" prefWidth="100" />
                        <Label text="comandos" styleClass="unit-label" />
                     </HBox>
                  </VBox>
               </VBox>
            </ScrollPane>
         </Tab>
         
         <!-- Pestaña Avanzado -->
         <Tab fx:id="advancedTab" text="Avanzado">
            <ScrollPane fitToWidth="true" styleClass="config-scroll">
               <VBox spacing="15" styleClass="config-content">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                  
                  <!-- Sección Funcionalidades -->
                  <VBox spacing="8">
                     <Label text="Funcionalidades avanzadas" styleClass="section-title" />
                     <CheckBox fx:id="autoCompleteCheckBox" text="Auto-completado de comandos" />
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Sección Inicio -->
                  <VBox spacing="8">
                     <Label text="Configuración de inicio" styleClass="section-title" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Comando de inicio:" styleClass="config-label" minWidth="150" />
                        <TextField fx:id="startupCommandTextField" prefWidth="300" />
                     </HBox>
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Sección Logging -->
                  <VBox spacing="8">
                     <Label text="Registro de actividad" styleClass="section-title" />
                     <CheckBox fx:id="logCommandsCheckBox" text="Guardar historial de comandos en archivo" />
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Archivo de log:" styleClass="config-label" minWidth="150" />
                        <TextField fx:id="logFilePathTextField" prefWidth="200" />
                        <Button fx:id="browseLogFileButton" text="Examinar..." styleClass="small-button" />
                     </HBox>
                     <Label text="Nota: Los logs pueden contener información sensible" 
                            styleClass="warning-text" wrapText="true" />
                  </VBox>
               </VBox>
            </ScrollPane>
         </Tab>

         <Tab fx:id="scriptsTab" text="Scripts">
            <ScrollPane fitToWidth="true" styleClass="config-scroll">
               <HBox fx:id="scriptContent" spacing="15" styleClass="script-content">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>

                  <Separator />
               </HBox>
            </ScrollPane>
         </Tab>
      </TabPane>
   </center>
   
   <!-- Botones de acción -->
   <bottom>
      <HBox styleClass="button-bar" alignment="CENTER_RIGHT" spacing="10" >
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
         </padding>

         <Button fx:id="resetDefaultsButton" text="Restablecer" styleClass="secondary-button" />
         <Region fx:id="bottomSpacer" HBox.hgrow="ALWAYS" />
         <Button fx:id="editButton" text="Editar" styleClass="primary-button" visible="false" managed="false" />
         <Button fx:id="cancelButton" text="Cancelar" styleClass="secondary-button" />
         <Button fx:id="applyButton" text="Aplicar" styleClass="primary-button" />
      </HBox>
   </bottom>
</BorderPane>
